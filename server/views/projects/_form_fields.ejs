<div class="form-group">
    <label for="name">Project name</label>
    <input value="<%= data.title %>" type="text" name="name" id="name" class="form-control" required>
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea name="desc" id="desc" class="form-control"><%= data.description %></textarea>
</div>

<div class="form-group">
    <label for="githubLink">GitHub Repo Link</label>
    <input value="<%= data.githubLink %>" type="text" name="githubLink" id="githubLink" class="form-control" required>
</div>

<div class="form-group">
    <label for="githubLink">Demo Link</label>
    <input value="<%= data.liveLink %>" type="text" name="liveLink" id="liveLink" class="form-control" required>
</div>

<div class="form-group">
    <label for="blogLink">Blog Post Link</label>
    <input value="<%= data.blogLink %>" type="text" name="blogLink" id="blogLink" class="form-control">
</div>

<div class="form-group">
    <label for="tags">Tags (Seperated by comma)</label>
    <textarea name="tags" id="tags" class="form-control"><%= data.tags %></textarea>
</div>

<div class="btn-group" role="group" aria-label="Basic radio toggle button group">

    <% if ( data.status === true ){ %>
        <input type="radio" class="btn-check" name="verifyCompleted" id="completed" autocomplete="off" value="true" checked>
        <label class="btn btn-outline-primary" for="completed">Completed</label>
      
        <input type="radio" class="btn-check" name="verifyCompleted" id="workInProgress" autocomplete="off" value="false"> 
        <label class="btn btn-outline-primary" for="workInProgress">WIP</label>
    <%} else if (data.status ===  false) {%>
        <input type="radio" class="btn-check" name="verifyCompleted" id="completed" autocomplete="off" value="true" >
        <label class="btn btn-outline-primary" for="completed">Completed</label>
      
        <input type="radio" class="btn-check" name="verifyCompleted" id="workInProgress" autocomplete="off" value="false" checked> 
        <label class="btn btn-outline-primary" for="workInProgress">WIP</label>
    <% } else { %>
        <input type="radio" class="btn-check" name="verifyCompleted" id="completed" autocomplete="off" value="true" >
        <label class="btn btn-outline-primary" for="completed">Completed</label>
      
        <input type="radio" class="btn-check" name="verifyCompleted" id="workInProgress" autocomplete="off" value="false" > 
        <label class="btn btn-outline-primary" for="workInProgress">WIP</label>
    <% } %>


  </div>


<div class="mt-2">
    <a href="/" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-primary">Save</button>
</div>