<div class="form-group">
    <label for="tag">Tag Name</label>
    <input value="<%= timeline.tag %>" type="text" name="tag" id="tag" class="form-control" required>
</div>

<div class="form-group">
    <label for="tag">Tag Color</label>
    <input value="<%= timeline.color %>" type="text" name="color" id="color" class="form-control" required>
</div>

<div class="form-group">
    <label for="description">Description</label>
    <textarea name="description" id="description" class="form-control"><%= timeline.description %></textarea>
</div>

<div class="form-group">
    <label for="linkText">Link Text</label>
    <input value="<%= timeline.linkText %>" type="text" name="linkText" id="linkText" class="form-control">
</div>

<div class="form-group">
    <label for="viewMore">View more Link</label>
    <input value="<%= timeline.link %>" type="text" name="viewMore" id="viewMore" class="form-control">
</div>

<div class="form-group">
    <label for="date">Date</label>
    <input value="<%= timeline.createdAt %>" type="date" name="date" id="date" class="form-control" required>
</div>

<div class="mt-2">
    <a href="/timeline" class="btn btn-secondary">Cancel</a>
    <button type="submit" class="btn btn-primary">Save</button>
</div>